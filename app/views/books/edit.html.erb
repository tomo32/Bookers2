<div class="row">
  <div class="col-md-3 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors</br>
        <% @book.errors.full_messages.each do |message| %>
          <%= message %></br>
        <% end %>
      <% end %>
      <%= form_with model: @book, local: true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %></br>
        <%= f.submit 'Update Book', class: "btn btn-success w-30" %>
      <% end %>
      <h7><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %></h7>
  </div>
</div>
