
<h2>New book</h2>
<% if book.errors.any? %>
  <%= book.errors.count %>errors</br>
  <% book.errors.full_messages.each do |message| %>
    <%= message %></br>
  <% end %>
<% end %>

<%= form_with model: book, local: true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %></br>
  <%= f.submit 'Create Book', class: "btn btn-success w-50" %>
<% end %>